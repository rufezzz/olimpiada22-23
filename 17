https://codeforces.com/gym/103665/problem/B

#include <iostream>

using namespace std;
 
int main()
{
    
    int n;
    cin>>n;
    
    std::string a;
    cin>>a;
    
    int i = 0;
    while (i<n)
    {
        if (a[i] == 'B')
        {
            a[i] = '1';
        }
        else
        {
            if (a[i] == 'A')
            {
                a[i] = '0';
            }
            else
            {
                if(a[i] == '1')
                {
                    a[i] = 'B';
                }
                else
                {
                    a[i] = 'A';
                }
            }
        }
        i += 1;
    }
    cout<<a;
    return 0;
    
    
}
    
