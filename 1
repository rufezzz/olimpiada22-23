ЗАДАЧА 4

#include<iostream>
using namespace std;
int main()
{
    int n;
    cin >> n;
    int i = 1;
    int j = 1;
    int di = -1;
    int dj = 0;
    int x = 1;
    while (x != n)
    {
        if (i == 1)
        {
            if (di == -1)
            {
                di = 0;
                dj = 1;
            }
            else
            {
                di = 1;
                dj = 0;
            }
        }
        else if (j == 1)
        {
            if (dj == -1)
            {
                dj = 0;
                di = 1;
            }
            else
            {
                di = 0;
                dj = 1;
            }
        }
        else if (i == j)
        {
            if (di == 1)
            {
                di = 0;
                dj = -1;
            }
            else
            {
                di = -1;
                dj = 0;
            }
        }
        i += di;
        j += dj;
        ++x;
    }
    cout << i << " " << j << endl;
}
